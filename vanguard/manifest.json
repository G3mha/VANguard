{
  "manifest_version": 2,
  "name": "VANguard",
  "version": "1.0",
  "description": "Enhance your web security and privacy.",
  "permissions": [
    "tabs",
    "storage",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking"
  ],
  "background": {
    "scripts": ["out/background.js"]
  },
  "browser_action": {
    "default_popup": "out/index.html",
    "default_title": "VANguard",
    "default_icon": {
      "256": "out/favicon.ico"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["out/content.js"]
    }
  ],
  "web_accessible_resources": [
    "out/*.html",
    "out/*.css",
    "out/*.js"
  ]
}

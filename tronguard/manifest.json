{
  "manifest_version": 2,
  "name": "TRONguard Dashboard",
  "version": "1.0",
  "author": "Enricco Gemha",
  "license": "AGPL-3.0",
  "description": "Enhance your web security and privacy.",
  "icons": {
    "256": "assets/icon.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "256": "assets/icon.png"
    },
    "default_title": "TRONguard Dashboard"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": [
    "assets/icon.png",
    "popup.html",
    "popup.js",
    "content.js",
    "styles/globals.css"
  ]
}
